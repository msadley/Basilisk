{
  "name": "basilisk",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npx tsc -b",
    "rest": "npm run build && npm run rest --prefix apps/rest",
    "rest2": "npm run build && npm run rest2 --prefix apps/rest",
    "vite": "npm run dev --prefix apps/web",
    "relay": "npm run build && node apps/relay/dist/index.js",
    "clean": "rimraf basilisk_data peer_data"
  },
  "author": "Adley Silva Mendes",
  "license": "ISC",
  "description": "A chat app built on top of libp2p, using TypeScript.",
  "dependencies": {
    "@chainsafe/libp2p-noise": "^16.1.4",
    "@chainsafe/libp2p-yamux": "^7.0.4",
    "@libp2p/autonat": "^2.0.37",
    "@libp2p/bootstrap": "^11.0.46",
    "@libp2p/circuit-relay-v2": "^3.2.23",
    "@libp2p/dcutr": "^2.0.37",
    "@libp2p/identify": "^3.0.38",
    "@libp2p/interface": "^2.10.5",
    "@libp2p/kad-dht": "^15.1.10",
    "@libp2p/ping": "^2.0.36",
    "@libp2p/tcp": "^10.1.18",
    "@libp2p/websockets": "^9.2.18",
    "@multiformats/multiaddr": "^12.5.1",
    "app-root-path": "^3.1.0",
    "core": "file:packages/core",
    "dotenv": "^17.2.1",
    "framer-motion": "^12.23.24",
    "it-drain": "^3.0.10",
    "it-pushable": "^3.2.3",
    "libp2p": "^2.9.0",
    "react-intersection-observer": "^9.16.0",
    "react-stately": "^3.42.0",
    "utils": "file:packages/utils",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "cross-env": "^10.0.0",
    "lerna": "^9.0.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
