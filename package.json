{
  "name": "basilisk",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npx tsc -b",
    "rest": "npm run build && npm run rest --prefix apps/rest",
    "rest2": "npm run build && npm run rest2 --prefix apps/rest",
    "vite": "npm run dev --prefix apps/web",
    "relay": "npm run build && node apps/relay/dist/index.js",
    "clean": "rimraf basilisk_data peer_data"
  },
  "author": "Adley Silva Mendes",
  "license": "ISC",
  "description": "A chat app built on top of libp2p, using TypeScript.",
  "dependencies": {
    "@basilisk/core": "workspace:*",
    "@chainsafe/libp2p-gossipsub": "^14.1.2",
    "@chainsafe/libp2p-noise": "^16.1.4",
    "@chainsafe/libp2p-yamux": "^7.0.4",
    "@hookform/resolvers": "^5.2.2",
    "@libp2p/autonat": "^2.0.37",
    "@libp2p/bootstrap": "^11.0.46",
    "@libp2p/circuit-relay-v2": "^3.2.23",
    "@libp2p/crypto": "5.1.7",
    "@libp2p/dcutr": "^2.0.37",
    "@libp2p/identify": "^3.0.38",
    "@libp2p/interface": "^2.10.5",
    "@libp2p/kad-dht": "^15.1.10",
    "@libp2p/ping": "^2.0.36",
    "@libp2p/tcp": "^10.1.18",
    "@libp2p/websockets": "^9.2.18",
    "@multiformats/multiaddr": "^12.5.1",
    "@sqlite.org/sqlite-wasm": "^3.50.4-build1",
    "babel-plugin-observing-components": "^0.2.0",
    "dotenv": "^17.2.3",
    "events": "^3.3.0",
    "framer-motion": "^12.23.24",
    "idb": "^8.0.3",
    "it-drain": "^3.0.10",
    "it-pushable": "^3.2.3",
    "libp2p": "^2.9.0",
    "mitt": "^3.0.1",
    "mobx": "^6.15.0",
    "mobx-react-lite": "^4.1.1",
    "react-hook-form": "^7.65.0",
    "react-intersection-observer": "^9.16.0",
    "react-stately": "^3.42.0",
    "react-textarea-autosize": "^8.5.9",
    "react-virtuoso": "^4.14.1",
    "remove": "^0.1.5",
    "zod": "^4.1.12",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@pm2/io": "^6.1.0",
    "@types/events": "^3.0.3",
    "@types/node": "^24.2.0",
    "@vitejs/plugin-basic-ssl": "^2.1.0",
    "cross-env": "^10.0.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.9.2"
  }
}
